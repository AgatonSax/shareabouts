<%= form_for @point do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <br>
  <%= form.fields_for :comments, @point.comments.build do |comments_fields| %>
    <%= comments_fields.label :comment %>
    <%= comments_fields.text_area :comment %>
    <br>
  <% end %>
  <%= form.submit %>  
<% end %>