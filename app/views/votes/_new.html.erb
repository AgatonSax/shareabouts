<%= form_for Vote.new(:supportable_id => supportable.id, :supportable_type => supportable.class.to_s), 
  :url => supportable_votes_path(supportable), :remote => true, 
  :html => { "data-behavior" => "load_result_in_popup" } do |form| %>
  <%= form.hidden_field :supporter_ip %>
  <%= form.submit t('map_controls.support_feature') %>
<% end %>