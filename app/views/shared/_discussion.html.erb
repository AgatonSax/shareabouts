<% if commentable.comments.present? %>
  <h6><%= pluralize commentable.comments.count, t("feature.comment") %></h6>
  <ul>
    <% for comment in commentable.comments %>
      <li>
        <%= content_tag :strong, comment.user.name if comment.user %>
        <span class="weak">
          <%= comment.created_at.strftime("%m/%d/%Y") %>
        </span> 
        <%= comment.comment %>
      </li>
    <% end %>
  </ul>
<% end %>

<h6>Reply</h6>
<%= render "comments/new", :commentable => commentable %>