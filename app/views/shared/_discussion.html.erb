<% if commentable.comments.present? %>
  <h6><%= pluralize commentable.comments.count, t("feature.comment.label") %></h6>
  <ul>
    <% for comment in commentable.comments %>
      <li class="clearfix">
        <div class="avatar">
          <%= avatar_for(comment.user) if comment.user.present? %>
        </div>
        <div>
          <%= content_tag :strong, comment.display_submitter if comment.display_submitter %>
          <span class="weak">
            <%= t "feature.when", :time => l(comment.created_at, :format => :just_time), :date => l(comment.created_at, :format => :date_long) %>
          </span> 
          <%= comment.comment %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render "comments/new", :commentable => commentable %>